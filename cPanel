yum update
yum install re2c -y
git clone https://github.com/Jan-E/uploadprogress.git
cd uploadprogress
/opt/cpanel/ea-php70/root/usr/bin/phpize
./configure --with-php-config=/opt/cpanel/ea-php70/root/usr/bin/php-config
make
make install
echo "extension=uploadprogress.so" >> /opt/cpanel/ea-php70/root/etc/php.d/uploadprogress.ini
service httpd restart
rm -fr uploadprogress
